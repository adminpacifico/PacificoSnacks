<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <report
                id="cert_ingresos_retencion"
                model="hr.payslip"
                string="Certificado de Ingresos y Retenciones"
                name="hr_reports_etet_v1.cert_ingresos_retencion"
                report_type="qweb-pdf"/>

        <template id="cert_ingresos_retencion">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <style>
                            .watermark {
                                position: absolute;
                                opacity: 0;
                                z-index: 1000;
                                transform: rotate(300deg);
                                -webkit-transform: rotate(300deg);
                                width: 100%;
                            }
                        </style>

                        <div
                            style="position:absolute;
                            opacity:0.25;z-index:1000;
                            transform:rotate(300deg);
                            -webkit-transform:rotate(0deg);
                            width:100%;">
                        <br></br>
                        <br></br>
                        <br></br>
                        <br></br>

                            <table style="width:100%">
                            <tr style="width:100%">
                                <td style="width:65%"></td>
                                <td style="width:35%;font-size:15px" class="text-center"><b>123456789</b></td>
                            </tr>
                            </table>
                            <br></br>
                            <table style="width:100%">
                                <tr style="width:100%" >
                                    <td style="width:7%;font-size:15px"></td>
                                    <td style="width:23%;font-size:15px"><span t-field="o.company_id.vat"/></td>
                                    <td style="width:3%;font-size:15px">2</td>
                                    <td style="width:16%;font-size:15px">RODRIGUEZ</td>
                                    <td style="width:16%;font-size:15px">NARANJO</td>
                                    <td style="width:20%;font-size:15px">ANA</td>
                                    <td style="width:20 %;font-size:15px">MARIA</td>
                                </tr>
                            </table>
                            <table style="width:100%">
                                <tr style="width:100%" >
                                    <td style="width:20%"></td>
                                    <td style="width:80%;font-size:15px;padding-top:5px"><span t-field="o.company_id.name"/></td>
                                </tr>
                            </table>

                            <table style="width:100%">
                                <tr style="width:100%" >
                                    <td style="width:9%;font-size:15px;padding-top:20px"></td>
                                    <td style="width:8%;font-size:10px;padding-top:20px">CC</td>
                                    <td style="width:23%;font-size:15px;padding-top:20px"><span t-field="o.employee_id.identification_id"/></td>
                                    <td style="width:60%;font-size:15px;padding-top:20px"><span t-field="o.employee_id.name"/></td>

                                </tr>
                            </table>
                        </div>
                        <div class="o-watermark">
                            <img style="width:100%" t-att-src="'/hr_reports_etet_v1/static/src/imagenes/Formulario.jpg'"/>

                        </div>

                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>