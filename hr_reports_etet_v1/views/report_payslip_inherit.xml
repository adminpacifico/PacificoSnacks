<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_payslip_inherit" inherit_id="hr_payroll.report_payslip">
    <xpath expr="//t[@t-call='web.internal_layout']" position="replace">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <xpath expr="//div[hasclass('page')]" position="replace">

                    <div class="page">
                    <!--<h2 t-field="o.name"/>-->

                    <table style="border: 1px solid black; border-collapse: collapse; width:95%" add="small">
                        <tr>
                            <td style="width:20%" ><img class="img-fluid" src="/web/image/2057/pacifico.jpg"/></td>
                                <td style="font-size:15px; margin-top:-25px; width:35%">
                                    <div><b><span t-field="o.company_id.name"/></b></div>
                                    <div>N.I.T<span t-field="o.company_id.vat"/></div>
                                    <div><span t-field="o.company_id.street"/></div>
                                    <div><span t-field="o.company_id.street2" t-if="o.company_id.street2"/></div>
                                    <div>
                                        <span t-field="o.company_id.city"/>
                                        <span t-field="o.company_id.state_id"/>
                                        <span t-field="o.company_id.zip"/>
                                    </div>
                                    <div><span t-field="o.company_id.country_id"/></div>
                                </td>
                            <td style="font-size:15px; margin-top:-15px" class="text-center">DOCUMENTO SOPORTE<p><span t-field="o.number"/></p></td>
                        </tr>
                        <tr>
                           <table style="width:95%"  add="small" name="employee-infos" >
                                <td>
                                    <table style="width:100%; margin-left:5px; font-size:12px">
                                        <tr style="height:150%;">
                                            <td><strong>Nomina</strong></td>
                                            <td><span t-field="o.name"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Periodo de Pago</strong></td>
                                            <td>del<span t-field="o.date_from"/> a <span t-field="o.date_to"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Nombre</strong></td>
                                            <td><span t-field="o.employee_id"/> C.C. <span t-field="o.employee_id.identification_id"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Contrato</strong></td>
                                            <td colspan="3"><span t-field="o.contract_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Basic Salary</strong></td>
                                            <td><span t-esc="o.line_ids.filtered(lambda line: line.code == 'BASIC').total"
                                                  t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/></td>
                                        </tr>
                                    </table>
                                </td>
                               <td>
                                    <table style="width:100%; margin-left:5px; font-size:12px">
                                        <tr>
                                            <td><strong>Fecha de Ingreso</strong></td>
                                             <td><span t-field="o.employee_id.job_id"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Fecha de pago</strong></td>
                                            <td><span t-field="o.compute_date"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Area Funcional</strong></td>
                                            <td><span t-field="o.struct_id"/></td>
                                        </tr>
                                        <tr>
                                            <td>Centro de Costo</td>
                                     <td>dato</td>
                                        </tr>
                                        <tr>

                                            <td>Cargo</td>
                                            <td><span t-field="o.employee_id.job_id"/></td>
                                        </tr>
                                    </table>
                                </td>


                            </table>
                        </tr>
                    </table>

